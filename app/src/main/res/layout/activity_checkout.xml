<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Activities.CheckoutActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bg1">

        <ImageView
            android:id="@+id/btn_close_proceed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="10dp"
            android:src="@drawable/baseline_close" />


        <ScrollView
            android:id="@+id/scrollView_proceed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_close_proceed"
            android:layout_alignParentBottom="true"
            android:fadingEdge="none"
            android:fillViewport="true"
            android:padding="5dp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg2"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Price"
                            android:textColor="@color/secondary_text"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_price_proceed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rs.000"
                            android:textColor="@color/secondary_text"
                            android:textSize="18sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/bg1"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Address"
                            android:textColor="@color/secondary_text"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_address_proceed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="West Garo Hills"
                            android:textColor="@color/secondary_text"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/bg1"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Contact number"
                            android:textColor="@color/secondary_text"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_contact"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0000000000"
                            android:textColor="@color/secondary_text"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Alternative contact number"
                            android:textColor="@color/secondary_text"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/layout_contact_proceed"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_opt_contact"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:text="00000000"
                                android:textColor="@color/secondary_text"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:visibility="gone" />

                            <EditText
                                android:id="@+id/et_opt_contact_proceed"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:background="@drawable/bg_edit_text"
                                android:hint="optional"
                                android:inputType="number"
                                android:maxLength="10"
                                android:padding="10dp"
                                android:textColor="@color/secondary_text"
                                android:textColorHint="@color/dark_color"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/btn_add_contact_proceed"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/bg6"
                                android:gravity="center"
                                android:text="ADD"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/layout_payment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/bg1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_payment1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:padding="10dp"
                            android:text="@string/upload_notice"
                            android:textColor="@color/secondary_text"
                            android:textSize="14sp" />

                        <androidx.viewpager2.widget.ViewPager2
                            android:layout_marginTop="5dp"
                            android:id="@+id/viewPager_payment"
                            android:layout_width="match_parent"
                            android:layout_height="500dp"
                            android:layout_below="@id/tv_payment1" />

                        <com.google.android.material.tabs.TabLayout
                            android:layout_marginTop="5dp"
                            android:id="@+id/payment_taLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/viewPager_payment"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="10dp"
                            android:background="@color/white"
                            android:orientation="horizontal"
                            app:tabIconTint="@color/white"
                            app:tabIconTintMode="multiply"
                            app:tabBackground="@drawable/tab_color_selector"
                            app:tabIndicatorHeight="0dp"/>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/bg1"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/btn_upload_checkout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/bg7"
                            android:paddingStart="10dp"
                            android:paddingTop="15dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="15dp"
                            android:text="UPLOAD SCREENSHOT"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:visibility="visible" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>